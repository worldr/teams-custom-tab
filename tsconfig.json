{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"strictNullChecks": true,
		"types": [
			"@microsoft/microsoft-graph-types"
		],
		"paths": {
			"@/*": ["src/*"]
		},
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"]
	},
	"include": ["src/vite-env.d.ts", "src/**/*.ts", "src/**/*.vue", "tests/**/*.ts"],
	"exclude": ["node_modules", "src/main-dev.ts", "src/Base-dev.vue", "src/core/AuthManager-dev.ts", "src/core/Version-dev.ts"],
	"references": []
}
